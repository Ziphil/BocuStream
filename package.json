{
  "name": "bocu-stream",
  "version": "1.0.0",
  "author": "Ziphil",
  "description": "",
  "homepage": "https://github.com/Ziphil/BocuStream",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "develop": "ts-node source/index.ts",
    "build": "tsc --project tsconfig-build.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext .ts source test",
    "lint:fix": "eslint --fix --ext .ts source test",
    "prepare": "tsc --project tsconfig-build.json"
  },
  "eslintConfig": {
    "extends": "ziphil",
    "rules": {
      "@typescript-eslint/no-unnecessary-qualifier": "off",
      "@typescript-eslint/no-parameter-properties": "off"
    }
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.(ts|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "util\\.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "util\\.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "verbose": true
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/eslint-plugin-tslint": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-ziphil": "^1.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^5.4.2"
  }
}
